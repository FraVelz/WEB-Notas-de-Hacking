---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Página no encontrada">
  <div class="container mx-auto px-4 py-16 text-center">
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <h2 class="text-2xl mb-8">Página no encontrada</h2>
    <p class="text-gray-400 mb-8">
      La página que buscas no existe o ha sido movida.
    </p>
    <a 
      href="/WEB-Notas-de-Hacking/" 
      class="inline-block bg-blue-600 hover:bg-blue-500 text-white px-6 py-3 rounded-lg transition-colors"
    >
      Volver al inicio
    </a>
  </div>
</Layout>
